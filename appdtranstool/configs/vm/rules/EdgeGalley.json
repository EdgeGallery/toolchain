{
    "updateFiles": [
        {
            "file": "/app-name.mf",
            "envs": [
                "{app_name}",
                "{app_provider}",
                "{app_package_version}",
                "{app_release_data_time}",
                "{app_type}",
                "{app_package_description}"
            ]
        },
        {
            "file": "/TOSCA-Metadata/TOSCA.meta",
            "envs": [
                "{app_name}",
                "{image_name}"
            ]
        },
        {
            "file": "/APPD/TOSCA_VNFD.meta",
            "envs": [
                "{app_name}"
            ]
        },
        {
            "file": "/APPD/Definition/app-name.yaml",
            "envs": [
                "{app_name}",
                "{app_package_version}",
                "{app_provider}",
                "{app_package_version}",
                "{vnfd_id}",
                "{memorysize}",
                "{vcpu}",
                "{storagesize}",
                "{image_name}",
                "{vm_name}"
            ]
        },
        {
            "file": "/Image/SwImageDesc.json",
            "envs": [
                "image_id",
                "app_package_version",
                "image_path",
                "image_name"
            ]
        }
    ],
    "replaceFiles": [
        "Artifacts/Docs/template.md"
    ],
    "zipFiles": [
        {
            "path": "/APPD/",
            "zipName": "{app_name}"
        }
    ],
    "renameFiles": [
        {
            "file": "/app-name.mf",
            "newName": "{app_name}"
        },
        {
            "file": "/APPD/Definition/app-name.yaml",
            "newName": "{app_name}"
        }
    ],
    "generateValues": [
        {
            "item": "image_id",
            "type": "uuid"
        },
        {
            "item": "vnfd_id",
            "type": "string"
        }
    ],
    "inputs": [
        {
            "item": "az",
            "type": "string"
        },
        {
            "item": "flavor",
            "type": "string"
        },
        {
            "item": "bootdata",
            "type": "string"
        },
        {
            "item": "image_path",
            "type": "string"
        }
    ],
    "isNeedHashCheck": "true"
}